<%- model_class = Article -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="row">
  <div class="col-md-10">
    <% @categories.each do |category| %>
      <% if category.article.length > 0 %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <strong><%= category.name %></strong>
          </div>
          <table class="table">
            <tbody>
              <% category.article.each do |article| %>
                <tr>
                  <td class="col-md-2"><%= article.name %></td>
                  <td class="col-md-5"><%= article.description %></td>
                  <td class="col-md-1"><%= number_to_currency(article.price, :locale => :fr) %></td>
                  <td class="col-md-2">
                    <% if article.availability == true %>
                      <span class="label label-success">disponible</span>
                    <% else %>
                      <span class="label label-warning">indisponible</span>
                    <% end %>
                  </td>
                  <% if can? :update, Article or can? :destroy, Article %>
                    <td class="col-md-2">
                      <% if can? :update, Article %>
                        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                  edit_article_path(article), :class => 'btn btn-default btn-xs' %>
                      <% end %>
                      <% if can? :destroy, Article %>
                        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                  article_path(article),
                                  :method => :delete,
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Etes-vous sûr ?')) },
                                  :class => 'btn btn-xs btn-danger' %>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    <% end %>
    <% if can? :create, Article %>
      <%= link_to t('.new', :default => t("helpers.links.new_article")),
                new_article_path,
                :class => 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-md-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>Catégories</strong>
      </div>
      <table class="table">
        <tbody>
          <% for category in @categories %>
            <tr><td><%= category.name %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% if can? :create, Category %>
      <%= link_to t('.new', :default => t("helpers.links.new_category")),
                new_category_path,
                :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>


