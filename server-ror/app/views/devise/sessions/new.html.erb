<div style="text-align: center;">

<h2><%= t("devise.common.sign_in") %></h2><br /><br />

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label t("devise.form.email") %><br />
  <%= f.email_field :email, autofocus: true %></div><br />

  <div><%= f.label t("devise.form.password") %><br />
    <%= f.password_field :password, autocomplete: "off" %></div><br />

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label t("devise.form.remember_me") %></div><br />
  <% end -%>

  <div><%= f.submit t("devise.common.sign_in") %></div><br />
<% end %>

<%= render "devise/shared/links" %>

</div>
