<%# cf http://stackoverflow.com/questions/6345383 %>

[
<% @orders.each_with_index do |order, index| %>
	{
		"order_id": <%= order.id %>,
		"created_at": "<%= order.created_at.strftime("%H:%M") %>",
		"is_paid": <%= order.is_paid %>,
		"is_served": <%= order.is_served %>,
		"items": [
		<% order.items.each_with_index do |item, index2| %>
			{
				"article": "<%= item.article.name %>",
				"comments": "<%= item.comments %>",
				"price": <%= item.price %>,
				"quantity": 1
			}
			<% if not index2 == order.items.count - 1%>
			,
			<% end %>
		<% end %>
		]
	}
	<% if not index == @orders.count - 1%>
	,
	<% end %>
<% end %>
]
